<Window x:Class="BrickSetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:BrickSetManager.Converters"
        Title="Set Manager" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:GreaterThanOneConverter x:Key="GreaterThanOneConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First row: buttons -->
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- Brick Logo -->
                        <Grid Width="50" Height="35" Margin="0,0,10,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Studs on top -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-2,0,0">
                                <Ellipse Width="8" Height="8" Fill="#E74C3C" Margin="1"/>
                                <Ellipse Width="8" Height="8" Fill="#E74C3C" Margin="1"/>
                                <Ellipse Width="8" Height="8" Fill="#E74C3C" Margin="1"/>
                                <Ellipse Width="8" Height="8" Fill="#E74C3C" Margin="1"/>
                            </StackPanel>

                            <!-- Brick body -->
                            <Border Grid.Row="1" Background="#E74C3C" CornerRadius="2" BorderBrush="#C0392B" BorderThickness="2"/>

                        </Grid>

                        <Button x:Name="AddSetButton" Content="Add Set" Width="100" Height="35" Click="AddSetButton_Click"
                                Background="#27AE60" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                        <Button x:Name="SearchColorButton" Content="Search" Width="100" Height="35" Click="SearchColorButton_Click"
                                Background="#3498DB" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                        <Button x:Name="RefreshButton" Content="Refresh" Width="100" Height="35" Click="RefreshButton_Click"
                                Background="#95A5A6" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                        <Button x:Name="ViewToggleButton" Width="120" Height="35" Click="ViewToggleButton_Click"
                                Background="#34495E" Foreground="White" BorderThickness="0" Margin="10,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ViewToggleIcon" Text="ðŸ“‹" FontSize="14" Margin="0,0,5,0"/>
                                <TextBlock x:Name="ViewToggleText" Text="List View"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="ImportCSVButton" Content="Import rebrickable CSV" Width="175" Height="35" Click="ImportCSVButton_Click"
                                Background="#16A085" Foreground="White" BorderThickness="0"/>
                        <Button x:Name="ExportButton" Content="Export DB" Width="100" Height="35" Click="ExportButton_Click"
                                Background="#8E44AD" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                        <Button x:Name="ImportButton" Content="Import DB" Width="100" Height="35" Click="ImportButton_Click"
                                Background="#E67E22" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                        <Button x:Name="ClearDatabaseButton" Content="Clear DB" Width="100" Height="35" Click="ClearDatabaseButton_Click"
                                Background="#C0392B" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Second row: search box and counter -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="3" Height="32">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" VerticalAlignment="Center"
                                       Margin="10,0,5,0" Foreground="#95A5A6"/>

                            <TextBox x:Name="SearchTextBox" Grid.Column="1"
                                     BorderThickness="0" Background="Transparent"
                                     VerticalAlignment="Center" FontSize="13"
                                     TextChanged="SearchTextBox_TextChanged">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Search sets by name or number..."
                                                                           Foreground="#95A5A6" FontSize="13"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="2" x:Name="ClearSearchButton" Content="âœ•"
                                    Width="30" Height="30"
                                    Background="Transparent" Foreground="#95A5A6"
                                    BorderThickness="0" FontSize="16" FontWeight="Bold"
                                    Click="ClearSearchButton_Click" Cursor="Hand"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#ECF0F1"/>
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Total sets counter -->
                    <Border Grid.Column="1" Background="#34495E" CornerRadius="3" Height="32" Padding="12,0" Margin="10,0,0,0">
                        <TextBlock x:Name="TotalSetsTextBlock" Text="Total: 0 sets" FontSize="13"
                                   Foreground="White" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Sets gallery view -->
        <ScrollViewer x:Name="GalleryScrollViewer" Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      PreviewMouseLeftButtonDown="ScrollViewer_PreviewMouseLeftButtonDown"
                      PreviewMouseMove="ScrollViewer_PreviewMouseMove"
                      PreviewMouseLeftButtonUp="ScrollViewer_PreviewMouseLeftButtonUp">
            <ItemsControl x:Name="SetsItemsControl" Margin="10">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#BDC3C7" BorderThickness="1" Margin="10" Padding="10"
                                Width="200" Cursor="Hand" MouseLeftButtonDown="SetCard_MouseLeftButtonDown">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Add Copy" Click="AddCopy_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="âž•" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Remove Copy" Click="RemoveCopy_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="âž–" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Set Quantity..." Click="SetQuantity_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="ðŸ”¢" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Set Location..." Click="SetLocation_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="ðŸ“" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Delete Set" Click="DeleteSet_Click">
                                        <MenuItem.Icon>
                                            <TextBlock Text="ðŸ—‘" FontSize="14"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <StackPanel>
                                <Grid Height="150">
                                    <Image Source="{Binding SetImage}" Stretch="Uniform"
                                           HorizontalAlignment="Center"/>
                                    <!-- Quantity badge (only shown if Quantity > 1) -->
                                    <Border Background="#E74C3C" CornerRadius="12" Padding="8,4"
                                            HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Quantity, Converter={StaticResource GreaterThanOneConverter}}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontWeight="Bold" FontSize="12" Foreground="White">
                                            <Run Text="x"/><Run Text="{Binding Quantity}"/>
                                        </TextBlock>
                                    </Border>
                                    <!-- Version badge (vOld or vNew) - only shown if multiple versions exist -->
                                    <Border CornerRadius="10" Padding="6,3"
                                            HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#3498DB"/>
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding InventoryVersion}" Value="1">
                                                        <Setter Property="Background" Value="#95A5A6"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding HasMultipleVersions}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding VersionBadge}" FontWeight="Bold" FontSize="10" Foreground="White"/>
                                    </Border>
                                </Grid>
                                <TextBlock Text="{Binding SetName}" FontWeight="Bold" FontSize="14"
                                           TextWrapping="Wrap" Margin="0,10,0,0" HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                                <TextBlock Text="{Binding SetNumber}" FontSize="12" Foreground="#7F8C8D"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Sets list view (DataGrid for sortable columns) -->
        <DataGrid x:Name="ListDataGrid" Grid.Row="1" Margin="10"
                  Visibility="Collapsed"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                  CanUserSortColumns="True"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                  RowHeight="80"
                  MouseDoubleClick="ListDataGrid_MouseDoubleClick">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Add Copy" Click="AddCopy_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="âž•" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Remove Copy" Click="RemoveCopy_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="âž–" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Set Quantity..." Click="SetQuantity_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ”¢" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Set Location..." Click="SetLocation_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ“" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Delete Set" Click="DeleteSet_Click">
                        <MenuItem.Icon>
                            <TextBlock Text="ðŸ—‘" FontSize="14"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <!-- Thumbnail column -->
                <DataGridTemplateColumn Header="Image" Width="100" CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Width="70" Height="70">
                                <Image Source="{Binding SetImage}" Stretch="Uniform"/>
                                <!-- Quantity badge -->
                                <Border Background="#E74C3C" CornerRadius="8" Padding="4,2"
                                        HorizontalAlignment="Right" VerticalAlignment="Top">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Quantity, Converter={StaticResource GreaterThanOneConverter}}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock FontWeight="Bold" FontSize="10" Foreground="White">
                                        <Run Text="x"/><Run Text="{Binding Quantity}"/>
                                    </TextBlock>
                                </Border>
                                <!-- Version badge - only shown if multiple versions exist -->
                                <Border CornerRadius="6" Padding="4,2"
                                        HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#3498DB"/>
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding InventoryVersion}" Value="1">
                                                    <Setter Property="Background" Value="#95A5A6"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HasMultipleVersions}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding VersionBadge}" FontWeight="Bold" FontSize="8" Foreground="White"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Set Name column (sortable) -->
                <DataGridTextColumn Header="Set Name" Binding="{Binding SetName}" Width="*"
                                    FontWeight="Bold" FontSize="14" CanUserSort="True"/>

                <!-- Set Number column (sortable) -->
                <DataGridTextColumn Header="Set Number" Binding="{Binding SetNumber}" Width="150"
                                    FontSize="12" CanUserSort="True"/>

                <!-- Quantity column (sortable) -->
                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"
                                    FontSize="12" CanUserSort="True"/>

                <!-- Piece Count column (sortable) -->
                <DataGridTextColumn Header="Pieces" Binding="{Binding PieceCount, TargetNullValue='-'}" Width="70"
                                    FontSize="12" CanUserSort="True"/>

                <!-- Release Year column (sortable) -->
                <DataGridTextColumn Header="Year" Binding="{Binding ReleaseYear, TargetNullValue='-'}" Width="60"
                                    FontSize="12" CanUserSort="True"/>

                <!-- Version column (sortable) -->
                <DataGridTextColumn Header="Ver" Binding="{Binding VersionBadge}" Width="60"
                                    FontSize="11" CanUserSort="True"/>

                <!-- Location column (sortable) -->
                <DataGridTextColumn Header="Location" Binding="{Binding SetLocation, TargetNullValue='-'}" Width="150"
                                    FontSize="12" CanUserSort="True"/>

                <!-- Date Added column (sortable) -->
                <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded, StringFormat='MM/dd/yyyy'}"
                                    Width="120" FontSize="11" CanUserSort="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Empty state message -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                    x:Name="EmptyStatePanel" Visibility="Collapsed">
            <TextBlock Text="No sets added yet" FontSize="20" Foreground="#95A5A6"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Click 'Add Set' to get started" FontSize="14" Foreground="#BDC3C7"
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Progress bar at bottom -->
        <Border Grid.Row="2" x:Name="ProgressPanel" Background="#34495E" Padding="10"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="ProgressTextBlock" Text="Processing sets..." FontSize="12"
                               Foreground="White" Margin="0,0,0,5"/>
                    <ProgressBar x:Name="ProgressBar" Height="10" IsIndeterminate="True"/>
                </StackPanel>

                <TextBlock Grid.Column="1" x:Name="QueueCountTextBlock" Text="Queue: 0"
                           FontSize="12" Foreground="White" VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
