<Window x:Class="BrickSetManager.Windows.SearchColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search by Color" Height="600" Width="800"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Color selection and search -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Color selection and search button -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Select Color:" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <ComboBox Grid.Column="1" x:Name="ColorComboBox" Width="200"/>
                    <Button Grid.Column="2" x:Name="SearchButton" Content="Search" Width="100" Height="32"
                            Click="SearchButton_Click"
                            Background="#3498DB" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
                </Grid>

                <!-- Search box -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Border Background="White" CornerRadius="3" Height="32">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="🔍" FontSize="16" VerticalAlignment="Center"
                                       Margin="10,0,5,0" Foreground="#95A5A6"/>

                            <TextBox x:Name="SearchTextBox" Grid.Column="1"
                                     BorderThickness="0" Background="Transparent"
                                     VerticalAlignment="Center" FontSize="13"
                                     KeyDown="SearchTextBox_KeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Filter by name or part number..."
                                                                           Foreground="#95A5A6" FontSize="13"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="2" x:Name="ClearSearchButton" Content="✕"
                                    Width="30" Height="30"
                                    Background="Transparent" Foreground="#95A5A6"
                                    BorderThickness="0" FontSize="16" FontWeight="Bold"
                                    Click="ClearSearchButton_Click" Cursor="Hand"
                                    Visibility="Collapsed">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="15">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#ECF0F1"/>
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Result count -->
                <TextBlock Grid.Row="2" x:Name="ResultCountTextBlock" Text="Select a color and click Search"
                           FontSize="12" Foreground="#BDC3C7" Margin="0,8,0,0"/>
            </Grid>
        </Border>

        <!-- Results grid -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <DataGrid x:Name="BricksDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      RowHeight="80" Margin="10"
                      MouseDoubleClick="BricksDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding PartImage}" Height="60" Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Part Name" Binding="{Binding PartName}" Width="*"/>

                    <DataGridTextColumn Header="Part Number" Binding="{Binding PartNumber}" Width="100"/>

                    <DataGridTextColumn Header="Color" Binding="{Binding ColorName}" Width="120"/>

                    <DataGridTextColumn Header="Quantity" Binding="{Binding TotalQuantity}" Width="80"/>

                    <DataGridTextColumn Header="Size" Width="80">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} x {1}">
                                <Binding Path="Length"/>
                                <Binding Path="Width"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Links" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="View Part" Padding="5,2" Margin="2"
                                            Tag="{Binding PartURL}"
                                            Click="ViewPartButton_Click"/>
                                    <Button Content="Price Guide" Padding="5,2" Margin="2"
                                            Tag="{Binding PriceGuideURL}"
                                            Click="PriceGuideButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <!-- Empty state -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                    x:Name="EmptyStatePanel" Visibility="Collapsed">
            <TextBlock Text="Select a color to view bricks" FontSize="18" Foreground="#95A5A6"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
