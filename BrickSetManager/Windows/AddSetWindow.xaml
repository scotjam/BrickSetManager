<Window x:Class="BrickSetManager.Windows.AddSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Set" Height="280" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Set number input -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Enter Set Number:" FontSize="14" FontWeight="Bold"/>
            <TextBox x:Name="SetNumberTextBox" Margin="0,10,0,0" Height="30"
                     ToolTip="Example: 21061-1" KeyDown="SetNumberTextBox_KeyDown"/>
            <TextBlock Text="Example: 21061-1 (Press Enter to add to queue)" FontSize="11"
                       Foreground="#7F8C8D" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Info message -->
        <TextBlock Grid.Row="1" TextWrapping="Wrap" FontSize="12" Foreground="#7F8C8D"
                   Margin="0,20,0,0"
                   Text="The set will be added to the queue and processed in the background. You can add multiple sets."/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="AddButton" Content="Add to Queue" Width="120" Height="35" Click="AddButton_Click"
                    Background="#27AE60" Foreground="White" BorderThickness="0"/>
            <Button x:Name="CloseButton" Content="Close" Width="100" Height="35" Click="CloseButton_Click"
                    Background="#95A5A6" Foreground="White" BorderThickness="0" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
