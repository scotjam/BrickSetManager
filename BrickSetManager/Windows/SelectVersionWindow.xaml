<Window x:Class="BrickSetManager.Windows.SelectVersionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Inventory Version" Height="220" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Message -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" FontSize="13" Margin="0,0,0,15">
            <Run Text="Multiple inventory versions found for set " FontWeight="Normal"/>
            <Run x:Name="SetNumberRun" FontWeight="Bold"/>
            <Run Text="." FontWeight="Normal"/>
        </TextBlock>

        <!-- Version selection -->
        <TextBlock Grid.Row="1" Text="Select which version to use:" FontSize="13" FontWeight="Bold" Margin="0,0,0,10"/>
        <ComboBox Grid.Row="2" x:Name="VersionComboBox" Height="35" VerticalContentAlignment="Center"
                  SelectedIndex="0">
            <ComboBoxItem Content="Latest Version (Recommended)" Tag="2"/>
            <ComboBoxItem Content="Older Version" Tag="1"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="OK" Width="100" Height="35" Click="OkButton_Click"
                    Background="#27AE60" Foreground="White" BorderThickness="0" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="35" Click="CancelButton_Click"
                    Background="#95A5A6" Foreground="White" BorderThickness="0" Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
