<Window x:Class="BrickSetManager.Windows.SetDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Details" Height="700" Width="1000"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Set header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <StackPanel Orientation="Horizontal">
                <Image x:Name="SetImage" Width="100" Height="100" Stretch="Uniform" Margin="0,0,20,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="SetNameTextBlock" FontSize="24" FontWeight="Bold" Foreground="White"
                               Cursor="Hand" MouseLeftButtonDown="SetName_MouseLeftButtonDown" TextDecorations="Underline"/>
                    <TextBlock x:Name="SetNumberTextBlock" FontSize="16" Foreground="#BDC3C7" Margin="0,5,0,0"
                               Cursor="Hand" MouseLeftButtonDown="SetNumber_MouseLeftButtonDown" TextDecorations="Underline"/>
                    <TextBlock x:Name="PartCountTextBlock" FontSize="14" Foreground="#95A5A6" Margin="0,5,0,0"/>

                    <!-- Location field -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <TextBlock Text="ðŸ“ Location: " FontSize="14" Foreground="#95A5A6" VerticalAlignment="Center"/>
                        <TextBox x:Name="LocationTextBox" MinWidth="200" MaxLength="100"
                                 FontSize="14" Foreground="White" Background="#34495E"
                                 BorderBrush="#7F8C8D" BorderThickness="1" Padding="5,2"
                                 VerticalAlignment="Center" LostFocus="LocationTextBox_LostFocus"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Search box -->
        <Border Grid.Row="1" Background="#34495E" Padding="15">
            <Border Background="White" CornerRadius="3" Height="32">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="ðŸ”" FontSize="16" VerticalAlignment="Center"
                               Margin="10,0,5,0" Foreground="#95A5A6"/>

                    <TextBox x:Name="SearchTextBox" Grid.Column="1"
                             BorderThickness="0" Background="Transparent"
                             VerticalAlignment="Center" FontSize="13"
                             TextChanged="SearchTextBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="#2C3E50"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search parts by name, number, or color..."
                                                                   Foreground="#95A5A6" FontSize="13"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <Button Grid.Column="2" x:Name="ClearSearchButton" Content="âœ•"
                            Width="30" Height="30"
                            Background="Transparent" Foreground="#95A5A6"
                            BorderThickness="0" FontSize="16" FontWeight="Bold"
                            Click="ClearSearchButton_Click" Cursor="Hand"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="15">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ECF0F1"/>
                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>
        </Border>

        <!-- Inventory list -->
        <ScrollViewer x:Name="InventoryScrollViewer" Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      PreviewMouseLeftButtonDown="ScrollViewer_PreviewMouseLeftButtonDown"
                      PreviewMouseMove="ScrollViewer_PreviewMouseMove"
                      PreviewMouseLeftButtonUp="ScrollViewer_PreviewMouseLeftButtonUp">
            <DataGrid x:Name="InventoryDataGrid" AutoGenerateColumns="False" IsReadOnly="True"
                      CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                      RowHeight="80" Margin="10">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Image" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding BrickDetail.PartImage}" Height="60" Stretch="Uniform"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Header="Part Name" Binding="{Binding BrickDetail.PartName}" Width="*"/>

                    <DataGridTextColumn Header="Part Number" Binding="{Binding PartNumber}" Width="100"/>

                    <DataGridTextColumn Header="Color" Binding="{Binding BrickDetail.ColorName}" Width="120"/>

                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>

                    <DataGridTextColumn Header="Size" Width="80">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} x {1}">
                                <Binding Path="BrickDetail.Length"/>
                                <Binding Path="BrickDetail.Width"/>
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>

                    <DataGridTemplateColumn Header="Links" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="View Part" Padding="5,2" Margin="2"
                                            Tag="{Binding BrickDetail.PartURL}"
                                            Click="ViewPartButton_Click"/>
                                    <Button Content="Price Guide" Padding="5,2" Margin="2"
                                            Tag="{Binding BrickDetail.PriceGuideURL}"
                                            Click="PriceGuideButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Window>
